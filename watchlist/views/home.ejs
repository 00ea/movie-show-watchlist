<%- contentFor('body') %>

<div class="hero-section d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 85vh; padding: 40px 20px;">
  
  <!-- Logo -->
  <div class="hero-image mb-4" style="animation: fadeInDown 0.8s ease-out;">
    <img src="/images/streamlist.jpg" alt="Streamlist Logo" width="120" height="120" class="rounded-circle mb-3" style="box-shadow: 0 8px 24px rgba(50, 184, 198, 0.3); border: 4px solid var(--color-teal-500);">
  </div>

  <!-- Main Heading -->
  <div class="hero-content" style="animation: fadeInUp 1s ease-out;">
    <h1 class="display-3 fw-bold mb-3" style="color: var(--color-text); letter-spacing: -1px;">
      Welcome to <span style="color: var(--color-teal-300);">Streamlist</span>
    </h1>
    <p class="lead mb-4" style="font-size: 1.3rem; color: var(--color-text-secondary); max-width: 600px; margin: 0 auto;">
      Your personal hub to organize, track, and manage all your favorite movies and TV shows in one place.
    </p>

    <!-- Feature Highlights -->
    <div class="row g-3 mb-5 mt-4" style="max-width: 800px; margin: 0 auto;">
      <div class="col-md-4">
        <div class="feature-card p-3">
          <i class="fa-solid fa-film fa-2x mb-2" style="color: var(--color-teal-300);"></i>
          <h5 class="mb-1">Track Movies & Shows</h5>
          <p class="text-muted small mb-0">Keep all your watchlist organized</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card p-3">
          <i class="fa-solid fa-search fa-2x mb-2" style="color: var(--color-teal-300);"></i>
          <h5 class="mb-1">Search & Filter</h5>
          <p class="text-muted small mb-0">Find what you're looking for fast</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card p-3">
          <i class="fa-solid fa-chart-line fa-2x mb-2" style="color: var(--color-teal-300);"></i>
          <h5 class="mb-1">Track Progress</h5>
          <p class="text-muted small mb-0">Mark what you've watched</p>
        </div>
      </div>
    </div>

    <!-- Call to Action Buttons -->
    <div class="cta-buttons d-flex gap-3 justify-content-center flex-wrap">
      <a href="/catalog" class="btn btn-primary btn-lg px-5 py-3" style="font-size: 1.1rem; border-radius: 12px;">
        <i class="fa-solid fa-list me-2"></i>View Catalog
      </a>
      <a href="/additem" class="btn btn-outline-light btn-lg px-5 py-3" style="font-size: 1.1rem; border-radius: 12px; border: 2px solid var(--color-teal-300); color: var(--color-teal-300);">
        <i class="fa-solid fa-plus me-2"></i>Add Item
      </a>
    </div>